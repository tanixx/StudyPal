<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Light gray border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Padding inside the EditText (optional, use EditText padding too) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
