<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp"
android:divider="@android:color/darker_gray"
android:showDividers="middle">

<!-- Topic -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvTopic"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Topic"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary" />

    <ImageButton
        android:id="@+id/deleteTopic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:src="@drawable/baseline_delete_24"
        app:tint="@color/holo_red_dark" />
</LinearLayout>

<!-- Deadline -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvDeadline"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Deadline: 2025-07-01"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <ImageButton
        android:id="@+id/editDeadline"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit Deadline"
        android:src="@drawable/baseline_edit_calendar_24"
        app:tint="@color/md_theme_primary" />
</LinearLayout>

<!-- Progress -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Progress: Started"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <ImageButton
        android:id="@+id/editProgress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit Progress"
        android:src="@drawable/baseline_edit_24"
        app:tint="@color/black" />
</LinearLayout>

<!-- Importance -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvImportance"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Importance: High"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <ImageButton
        android:id="@+id/editImportance"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit Importance"
        android:src="@drawable/baseline_edit_24"
        app:tint="@color/black" />
</LinearLayout>

</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
